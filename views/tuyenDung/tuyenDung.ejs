<%- include("../_layouts/header") %>

<div class="row">
    <h1>Đăng tin</h1>
    <form method="POST" action="/tuyenDung/signUp">
        <div class="form-group">
            <p>Ngành nghề:</p>
            <select name="nameNganh">
                <% pageNganh.forEach(function(index) { %> 
                <option value="<%= index.nameNganh %> "><%= index.nameNganh %> </option>
               <% }) %> 
            </select>
        </div>
        <div class="form-group">
            <p>Tên Công Ty:</p>
            <input type="text" name="nameCty" class="form-control" placeholder="Tên Công Ty" required />
        </div>
        <div class="form-group">
            <p>Vị trí tuyển dụng:</p>
            <input type="text" name="viTri" class="form-control" placeholder="Vị trí tuyển dụng" required />
        </div>
        <div class="form-group">
            <p>Yêu cầu:</p>
            <textarea name="yeuCau" placeholder="Yêu cầu công việc" class="form-control" minlength="5" required></textarea>
        </div>
        <div class="form-group">
            <p>Mô tả:</p>
            <textarea name="moTa" placeholder="Mô tả công việc" class="form-control" minlength="5" required></textarea>
        </div>
        <div class="form-group">
            <p>Sđt:</p>
            <input type="number" name="sdt" class="form-control" placeholder="Số điện thoại" required />
        </div>
        <button type="submit">Đăng tin</button>
    </form>
</div>

<%- include("../_layouts/footer") %>